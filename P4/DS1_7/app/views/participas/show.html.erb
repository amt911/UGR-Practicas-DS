<%= stylesheet_link_tag 'estilos' %> 
<%= stylesheet_link_tag 'gestor' %> 
<head>
<title>Mostrar participación</title>
</head>
<h1 class="titulo"><a class="enlacetitulo" href="http://clados.ugr.es/DS1_7">Haz Una Línea Tournament</a></h1>
<% if session[:admin] %>
<h2 class="subtitulo">Participación</h2>

<div class="torneo-container-button">
<%= render @participa %>
      </div>

<div class="botonestorneo">
  <%= link_to "Edit this participa", edit_participa_path(@participa), class:"botontorneo" %>
  <%= link_to "Back to participas", participas_path, class:"botontorneo" %>
</div>
<div class="botoneditardiv">

  <%= button_to "Destroy this participa", @participa, method: :delete, class:"botoneditar"  %>
</div>
<% else %>

  <h2 class="subtitulo">No estas autorizado para acceder a esta sección</h2>  

  <%end%>